n=int(input())
r=float(input())
d=int(input()) 
if(n>=4 and n<=6 or n>=11 and n<=12):                                                                                       
    print("Hotel Tariff:Rs.","%.2f" %(1.2*r*d))
elif(n<=12):
    print("Hotel Tariff:Rs.","%.2f" %(r*d))
else:
    print("invalid input")
